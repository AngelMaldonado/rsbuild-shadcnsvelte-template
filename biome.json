{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "indentWidth": 2
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    },
    "formatter": {
      "indentWidth": 2
    }
  },
  "json": {
    "formatter": {
      "indentWidth": 2
    }
  },
  "html": {
    "formatter": {
      "indentWidth": 2
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "overrides": [
    {
      "includes": ["**/*.svelte"],

      "linter": {
        "rules": {
          "style": {
            "useConst": "off",

            "useImportType": "off"
          },

          "correctness": {
            "noUnusedVariables": "off",

            "noUnusedImports": "off"
          }
        }
      }
    }
  ]
}
